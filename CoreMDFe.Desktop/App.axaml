<Application xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
    xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:vm="clr-namespace:CoreMDFe.Desktop.ViewModels"
    xmlns:views="clr-namespace:CoreMDFe.Desktop.Views"
    x:Class="CoreMDFe.Desktop.App"
    RequestedThemeVariant="Light">

    <Application.DataTemplates>

        <DataTemplate DataType="{x:Type vm:ConfiguracoesViewModel}">
            <views:ConfiguracoesView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:OnboardingViewModel}">
            <views:OnboardingView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:SeletorEmpresaViewModel}">
            <views:SeletorEmpresaView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ResumoViewModel}">
            <views:ResumoView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:VeiculosViewModel}">
            <views:VeiculosView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CondutoresViewModel}">
            <views:CondutoresView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:EmissaoViewModel}">
            <views:EmissaoView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:HistoricoViewModel}">
            <views:HistoricoView />
        </DataTemplate>

    </Application.DataTemplates>

    <Application.Styles>
        <themes:MaterialTheme BaseTheme="Light" PrimaryColor="Teal" SecondaryColor="Amber" />
        <icons:MaterialIconStyles />

        <Style Selector="Button.MenuButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#555555" />
        </Style>
        <Style Selector="Button.MenuButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#F3E5F5" />
        </Style>

        <Style Selector="Border.Card">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="BoxShadow" Value="0 2 10 0 #0A000000" />
            <Setter Property="Padding" Value="25" />
        </Style>

    </Application.Styles>
</Application>