<Application xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
    xmlns:icons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:vm="clr-namespace:CoreMDFe.Desktop.ViewModels"
    xmlns:views="clr-namespace:CoreMDFe.Desktop.Views"
    x:Class="CoreMDFe.Desktop.App"
    RequestedThemeVariant="Light">

    <Application.DataTemplates>

        <DataTemplate DataType="{x:Type vm:ConfiguracoesViewModel}">
            <views:ConfiguracoesView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <Border Background="White" CornerRadius="8" BoxShadow="0 4 8 0 #40000000" Padding="32"
                HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Spacing="16" MaxWidth="500">
                    <icons:MaterialIcon Kind="TruckFastOutline" Width="80" Height="80"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        HorizontalAlignment="Center" />
                    <TextBlock Text="Bem-vindo ao Zeus MDF-e!" FontSize="28" FontWeight="Bold"
                        HorizontalAlignment="Center" Foreground="#333333" />
                    <TextBlock
                        Text="Utilize o menu lateral ou os atalhos de teclado para navegar pelo sistema."
                        TextWrapping="Wrap" TextAlignment="Center" FontSize="16"
                        Foreground="#666666" />
                </StackPanel>
            </Border>
        </DataTemplate>

    </Application.DataTemplates>

    <Application.Styles>
        <themes:MaterialTheme BaseTheme="Light" PrimaryColor="Teal" SecondaryColor="Amber" />
        <icons:MaterialIconStyles />
    </Application.Styles>
</Application>