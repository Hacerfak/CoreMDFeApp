<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CoreMDFe.Desktop.ViewModels"
    xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    x:Class="CoreMDFe.Desktop.Views.ConfiguracoesView"
    x:DataType="vm:ConfiguracoesViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Padding="40">
            <StackPanel Spacing="20" MaxWidth="800" HorizontalAlignment="Left">
                <TextBlock Text="Configurações do Sistema" FontSize="28" FontWeight="Light"
                    Foreground="#222222" />
                <TextBlock
                    Text="Configure o certificado, o ambiente de emissão e os dados fixos da transportadora."
                    FontSize="14" Foreground="Gray" Margin="0,-15,0,10" />

                <Border Background="White" CornerRadius="8" BoxShadow="0 4 15 0 #0A000000"
                    Padding="30">
                    <StackPanel Spacing="15">
                        <TextBlock Text="1. Certificado Digital e Ambiente" FontWeight="Bold"
                            Foreground="#673AB7" FontSize="16" Margin="0,0,0,10" />

                        <Grid ColumnDefinitions="*, 20, 200" RowDefinitions="Auto, 15, Auto">
                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="5">
                                <TextBlock Text="Caminho do Arquivo (.pfx)" FontWeight="SemiBold"
                                    Foreground="#555555" FontSize="13" />
                                <Grid ColumnDefinitions="*, Auto">
                                    <TextBox Grid.Column="0" Text="{Binding CaminhoCertificado}"
                                        Classes="Outline" Theme="{StaticResource OutlineTextBox}"
                                        IsReadOnly="True" Watermark="Nenhum arquivo..." />
                                    <Button Grid.Column="1"
                                        Command="{Binding ProcurarCertificadoCommand}"
                                        Classes="Outline" Margin="5,0,0,0">
                                        <materialIcons:MaterialIcon Kind="FolderOpen"
                                            Foreground="#673AB7" Width="22" Height="22" />
                                    </Button>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Spacing="5">
                                <TextBlock Text="Ambiente SEFAZ" FontWeight="SemiBold"
                                    Foreground="#555555" FontSize="13" />
                                <ComboBox ItemsSource="{Binding ListaAmbientes}"
                                    SelectedIndex="{Binding AmbienteSelecionadoIndex}"
                                    HorizontalAlignment="Stretch"
                                    Theme="{StaticResource OutlineComboBox}" />
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Spacing="5">
                                <TextBlock Text="Senha do Certificado" FontWeight="SemiBold"
                                    Foreground="#555555" FontSize="13" />
                                <TextBox Text="{Binding SenhaCertificado}" PasswordChar="•"
                                    Classes="Outline" Theme="{StaticResource OutlineTextBox}"
                                    Watermark="Digite a senha..." />
                            </StackPanel>

                            <CheckBox Grid.Row="2" Grid.Column="2"
                                Content="Manter Certificado em Cache"
                                IsChecked="{Binding ManterCertificadoCache}" Foreground="#555555"
                                VerticalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" BoxShadow="0 2 10 0 #0A000000"
                    Padding="25">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <materialIcons:MaterialIcon Kind="Tune" Width="24" Height="24"
                                Foreground="#FF9800" />
                            <TextBlock Text="Padrões de Emissão" FontSize="18" FontWeight="SemiBold"
                                Foreground="#333333" VerticalAlignment="Center" />
                        </StackPanel>

                        <Grid ColumnDefinitions="*, 20, *, 20, *">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Tipo de Emissão Padrão" FontWeight="SemiBold"
                                    FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
                                <ComboBox SelectedIndex="{Binding TipoEmissaoPadrao}"
                                    HorizontalAlignment="Stretch" Classes="Outline">
                                    <ComboBoxItem Content="1 - Normal" />
                                    <ComboBoxItem Content="2 - Contingência" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Modalidade Padrão" FontWeight="SemiBold"
                                    FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
                                <ComboBox SelectedIndex="{Binding ModalidadePadrao}"
                                    HorizontalAlignment="Stretch" Classes="Outline">
                                    <ComboBoxItem Content="1 - Rodoviário" />
                                    <ComboBoxItem Content="2 - Aéreo" />
                                    <ComboBoxItem Content="3 - Aquaviário" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
                                <CheckBox Content="Gerar QR Code (Obrigatório DAMDFE)"
                                    IsChecked="{Binding GerarQrCode}" FontWeight="SemiBold"
                                    Foreground="#444" />
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="*, 20, *">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Tipo de Emitente" FontWeight="SemiBold"
                                    FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
                                <ComboBox SelectedIndex="{Binding TipoEmitentePadrao}"
                                    HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="1 - Prestador de Serviço" />
                                    <ComboBoxItem Content="2 - Transportador de Carga Própria" />
                                    <ComboBoxItem Content="3 - CTe Globalizado" />
                                </ComboBox>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Tipo de Transportador" FontWeight="SemiBold"
                                    FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
                                <ComboBox SelectedIndex="{Binding TipoTransportadorPadrao}"
                                    HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="Nenhum" />
                                    <ComboBoxItem Content="1 - ETC" />
                                    <ComboBoxItem Content="2 - TAC" />
                                    <ComboBoxItem Content="3 - CTC" />
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" BoxShadow="0 2 10 0 #0A000000"
                    Padding="25">
                    <StackPanel Spacing="20">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <materialIcons:MaterialIcon Kind="AccountTie" Width="24" Height="24"
                                Foreground="#2196F3" />
                            <TextBlock Text="Responsável Técnico (Desenvolvedor/Software House)"
                                FontSize="18" FontWeight="SemiBold" Foreground="#333333"
                                VerticalAlignment="Center" />
                        </StackPanel>

                        <Grid ColumnDefinitions="*, 20, *">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="CNPJ da Empresa Desenvolvedora"
                                    FontWeight="SemiBold" FontSize="12" Foreground="Gray"
                                    Margin="0,0,0,5" />
                                <TextBox Text="{Binding RespTecCnpj}"
                                    Watermark="Ex: 00.000.000/0000-00" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Nome do Contato" FontWeight="SemiBold"
                                    FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
                                <TextBox Text="{Binding RespTecNome}"
                                    Watermark="Nome do responsável" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" />
                            </StackPanel>
                        </Grid>

                        <Grid ColumnDefinitions="*, 20, *">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Telefone de Suporte" FontWeight="SemiBold"
                                    FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
                                <TextBox Text="{Binding RespTecTelefone}"
                                    Watermark="Ex: (11) 99999-9999" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="E-mail de Suporte" FontWeight="SemiBold"
                                    FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
                                <TextBox Text="{Binding RespTecEmail}"
                                    Watermark="suporte@seusoftware.com.br" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" BoxShadow="0 4 15 0 #0A000000"
                    Padding="30">
                    <StackPanel Spacing="15">
                        <TextBlock Text="2. Dados da Empresa e ANTT" FontWeight="Bold"
                            Foreground="#673AB7" FontSize="16" Margin="0,0,0,10" />

                        <Grid ColumnDefinitions="*, 20, *" RowDefinitions="Auto, 15, Auto">
                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="5">
                                <TextBlock Text="CNPJ" FontWeight="SemiBold" Foreground="#555555"
                                    FontSize="13" />
                                <TextBox Text="{Binding Cnpj}" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" Background="#F0F0F0"
                                    IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2" Spacing="5">
                                <TextBlock Text="RNTRC"
                                    FontWeight="SemiBold" Foreground="#555555" FontSize="13" />
                                <TextBox Text="{Binding Rntrc}" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" Watermark="Ex: 12345678" />
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Spacing="5">
                                <TextBlock Text="Razão Social" FontWeight="SemiBold"
                                    Foreground="#555555" FontSize="13" />
                                <TextBox Text="{Binding Nome}" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" />
                            </StackPanel>
                        </Grid>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Logo da Empresa (DAMDFE)" FontWeight="SemiBold"
                                FontSize="12" Foreground="Gray" Margin="0,0,0,5" />
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <Button Content="Procurar Logo"
                                    Command="{Binding ProcurarLogoCommand}" Classes="Outline" />
                                <TextBlock Text="{Binding TextoLogomarca}"
                                    VerticalAlignment="Center" Foreground="Gray" FontSize="12" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="20"
                    Margin="0,10,0,0">
                    <TextBlock Text="{Binding MensagemSistema}" Foreground="#4CAF50"
                        FontWeight="Bold" VerticalAlignment="Center" />
                    <Button Content="Salvar Configurações"
                        Command="{Binding SalvarConfiguracoesCommand}" Classes="Primary"
                        Theme="{StaticResource SolidButton}" Background="#4CAF50" Foreground="White"
                        Padding="30,12" CornerRadius="20" FontSize="15" />
                </StackPanel>

            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>