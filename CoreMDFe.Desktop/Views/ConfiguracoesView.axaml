<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:CoreMDFe.Desktop.ViewModels"
    xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    x:Class="CoreMDFe.Desktop.Views.ConfiguracoesView"
    x:DataType="vm:ConfiguracoesViewModel">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Border Padding="40">
            <StackPanel Spacing="20" MaxWidth="800" HorizontalAlignment="Left">
                <TextBlock Text="Configurações do Sistema" FontSize="28" FontWeight="Light"
                    Foreground="#222222" />
                <TextBlock
                    Text="Configure o certificado, o ambiente de emissão e os dados fixos da transportadora."
                    FontSize="14" Foreground="Gray" Margin="0,-15,0,10" />

                <Border Background="White" CornerRadius="8" BoxShadow="0 4 15 0 #0A000000"
                    Padding="30">
                    <StackPanel Spacing="15">
                        <TextBlock Text="1. Certificado Digital e Ambiente" FontWeight="Bold"
                            Foreground="#673AB7" FontSize="16" Margin="0,0,0,10" />

                        <Grid ColumnDefinitions="*, 20, 200" RowDefinitions="Auto, 15, Auto">
                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="5">
                                <TextBlock Text="Caminho do Arquivo (.pfx)" FontWeight="SemiBold"
                                    Foreground="#555555" FontSize="13" />
                                <Grid ColumnDefinitions="*, Auto">
                                    <TextBox Grid.Column="0" Text="{Binding CaminhoCertificado}"
                                        Classes="Outline" Theme="{StaticResource OutlineTextBox}"
                                        IsReadOnly="True" Watermark="Nenhum arquivo..." />
                                    <Button Grid.Column="1"
                                        Command="{Binding ProcurarCertificadoCommand}"
                                        Classes="Outline" Margin="5,0,0,0">
                                        <materialIcons:MaterialIcon Kind="FolderOpen"
                                            Foreground="#673AB7" Width="22" Height="22" />
                                    </Button>
                                </Grid>
                            </StackPanel>

                            <StackPanel Grid.Row="0" Grid.Column="2" Spacing="5">
                                <TextBlock Text="Ambiente SEFAZ" FontWeight="SemiBold"
                                    Foreground="#555555" FontSize="13" />
                                <ComboBox ItemsSource="{Binding ListaAmbientes}"
                                    SelectedIndex="{Binding AmbienteSelecionadoIndex}"
                                    HorizontalAlignment="Stretch"
                                    Theme="{StaticResource OutlineComboBox}" />
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Spacing="5">
                                <TextBlock Text="Senha do Certificado" FontWeight="SemiBold"
                                    Foreground="#555555" FontSize="13" />
                                <TextBox Text="{Binding SenhaCertificado}" PasswordChar="•"
                                    Classes="Outline" Theme="{StaticResource OutlineTextBox}"
                                    Watermark="Digite a senha..." />
                            </StackPanel>

                            <CheckBox Grid.Row="2" Grid.Column="2"
                                Content="Manter Certificado em Cache"
                                IsChecked="{Binding ManterCertificadoCache}" Foreground="#555555"
                                VerticalAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="8" BoxShadow="0 4 15 0 #0A000000"
                    Padding="30">
                    <StackPanel Spacing="15">
                        <TextBlock Text="2. Dados da Empresa e ANTT" FontWeight="Bold"
                            Foreground="#673AB7" FontSize="16" Margin="0,0,0,10" />

                        <Grid ColumnDefinitions="*, 20, *" RowDefinitions="Auto, 15, Auto">
                            <StackPanel Grid.Row="0" Grid.Column="0" Spacing="5">
                                <TextBlock Text="CNPJ" FontWeight="SemiBold" Foreground="#555555"
                                    FontSize="13" />
                                <TextBox Text="{Binding Cnpj}" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" Background="#F0F0F0"
                                    IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2" Spacing="5">
                                <TextBlock Text="RNTRC (Obrigatório para Rodoviário)"
                                    FontWeight="SemiBold" Foreground="#555555" FontSize="13" />
                                <TextBox Text="{Binding Rntrc}" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" Watermark="Ex: 12345678" />
                            </StackPanel>

                            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Spacing="5">
                                <TextBlock Text="Razão Social" FontWeight="SemiBold"
                                    Foreground="#555555" FontSize="13" />
                                <TextBox Text="{Binding Nome}" Classes="Outline"
                                    Theme="{StaticResource OutlineTextBox}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="20"
                    Margin="0,10,0,0">
                    <TextBlock Text="{Binding MensagemSistema}" Foreground="#4CAF50"
                        FontWeight="Bold" VerticalAlignment="Center" />
                    <Button Content="Salvar Configurações"
                        Command="{Binding SalvarConfiguracoesCommand}" Classes="Primary"
                        Theme="{StaticResource SolidButton}" Background="#4CAF50" Foreground="White"
                        Padding="30,12" CornerRadius="20" FontSize="15" />
                </StackPanel>

            </StackPanel>
        </Border>
    </ScrollViewer>
</UserControl>